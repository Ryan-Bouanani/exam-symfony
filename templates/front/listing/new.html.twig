{% extends 'back/base.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}
    Nouvelle annonce
{% endblock %}

{% block body %}

            <a class="btn btn-primary my-3 float-end"
               href="{{ path('app_home') }}"
            >
                Accueile
            </a>
        </div>

        <div class="container">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-lg-4">
                        {{ form_row(form.title) }}
                    </div>
                    <div class="col-lg-4">
                        {{ form_row(form.description) }}
                    </div>
                    <div class="col-lg-2">
                        {{ form_row(form.producedYear) }}
                    </div>
                    <div class="col-lg-2">
                        {{ form_row(form.mileage) }}
                    </div>
                </div>
                {{ form_row(form.price) }}
                <div class="col-lg-6">
                    {{ form_row(form.model) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
